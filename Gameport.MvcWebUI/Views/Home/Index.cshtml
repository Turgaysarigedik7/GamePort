            <!-- Play Icon Start -->
            <div style="opacity:1;" id="card__play" href="#" class="card__play">
                <i class="icon ion-ios-play"></i>
            </div>
            <!-- Play Icon End -->
            <div style="position: absolute; left: 1%; width:40%; ">
                <h3 style="color: white;">@item.CategoryName</h3>
                <h5 style="color:white; font-size:medium">Günün şafağına yolculuk</h5>
            </div>
        </a>
        }
    </div>
</div>



